<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/template_padding_small"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/template_background_img"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                />
            <ImageView
                android:id="@+id/image_state"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_alignBottom="@+id/template_img"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:layout_alignBottom="@id/template_img"
                android:layout_toRightOf="@id/image_state">
                <TextView
                    android:id="@+id/template_subprocess_title"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:text="Nombre"
                    android:textSize="15sp"
                    />
                <TextView
                    android:id="@+id/template_subprocess_date"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Fecha"
                    android:textSize="15sp"
                    android:maxLines="1"
                    />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>