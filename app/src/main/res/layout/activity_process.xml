<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_process"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.julian.agromobile.ProcessActivity">

    <TextView
        android:id="@+id/name_process"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_nombre"
        android:textColor="#000000"
        android:textSize="30sp"/>
    <TextView
        android:id="@+id/state_process"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="@string/txt_estado"
        />
    <TextView
        android:id="@+id/date_init_process"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="@string/txt_fecha_inicio"
        />
    <TextView
        android:id="@+id/date_fin_process"
        android:layout_width="match_parent"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:text="@string/txt_fecha_fin"
       />
    <TextView
        android:id="@+id/template_fly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/primary"
        android:text="Datos de vuelo"
        android:textSize="19sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="#000000"
            android:text="Altura de vuelo"
            android:textSize="15sp"
            android:maxLines="1"
            />
        <TextView
            android:id="@+id/txt_altura"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:text="Altura"
            android:textSize="15sp"
            android:maxLines="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="#000000"
            android:text="ResoluciÃ³n"
            android:textSize="15sp"
            android:maxLines="1"
            />
        <TextView
            android:id="@+id/txt_resolution"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:text="Resolucion"
            android:textSize="15sp"
            android:maxLines="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="#000000"
            android:text="Dist Lineas Vuelo"
            android:textSize="15sp"
            android:maxLines="1"
            />
        <TextView
            android:id="@+id/txt_dist_lineas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:text="Distancia vuelos"
            android:textSize="15sp"
            android:maxLines="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="#000000"
            android:text="Distancia capturas"
            android:textSize="15sp"
            android:maxLines="1"
            />
        <TextView
            android:id="@+id/txt_dist_capture"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:text="Distancia entre capturas"
            android:textSize="15sp"
            android:maxLines="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="#000000"
            android:text="Vel captura"
            android:textSize="15sp"
            android:maxLines="1"
            />
        <TextView
            android:id="@+id/txt_vel_capture"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:text="Velocidad de captura"
            android:textSize="15sp"
            android:maxLines="1"
            />
    </LinearLayout>
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/primary"
        android:text="Capturas"
        android:textSize="19sp"
        
        />
    <ListView
        android:id="@+id/listSubProcess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></ListView>

    </LinearLayout>
