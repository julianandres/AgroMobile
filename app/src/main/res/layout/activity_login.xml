<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:stretchColumns="*"
    android:id="@+id/activity_login"
   >
    <android.support.design.widget.AppBarLayout
        android:layout_height="0dp"
        android:layout_weight="4"
        android:layout_width="match_parent"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/huerta2"
                android:scaleType="centerCrop"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/mask_login"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ff7300"
                android:textSize="37sp"
                android:text="@string/app_name"
                android:layout_gravity="bottom"
                android:padding="10dp"
                />


        </FrameLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/txt_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/login_margin_big"
        android:layout_marginLeft="@dimen/login_margin_small"
        android:layout_marginRight="@dimen/login_margin_small"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/login_usr"
            android:inputType="textEmailAddress"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/txt_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/login_margin_small"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/login_pass"
            android:inputType="textPassword"
            />
    </android.support.design.widget.TextInputLayout>

    <TableRow
        android:layout_marginTop="@dimen/login_margin_big"
        android:layout_marginBottom="@dimen/login_margin_small"
        android:layout_marginLeft="@dimen/login_margin_small"
        android:layout_marginRight="@dimen/login_margin_small"
        >
        <Button
            android:theme="@style/ButtonAccent"
            android:id="@+id/btn_aceptar"
            android:layout_height="wrap_content"
            android:text="@string/login_btn_in"
            />
        <Button
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:id="@+id/btn_registro"
            android:layout_height="wrap_content"
            android:text="@string/login_btn_register"
            />

    </TableRow>

</TableLayout>
