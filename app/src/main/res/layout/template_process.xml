<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/template_padding_small"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:background="#c7b617"
               >
               <TextView
                   android:id="@+id/template_title"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="@dimen/template_padding_small"
                   android:background="#c7b617"
                   android:textColor="#ffffff"
                   android:text="Nombre"
                   android:maxLines="1"
                   android:textSize="15sp"
                   />
               <TextView
                   android:id="@+id/template_state"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Estado"
                   android:background="#c7b617"
                   android:padding="@dimen/template_padding_small"
                   android:textColor="#ffffff"
                   android:textSize="15sp"
                   />
               <TextView
                   android:id="@+id/template_date"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="#c7b617"
                   android:text="Fecha"
                   android:textSize="15sp"
                   android:maxLines="2"
                   android:padding="@dimen/template_padding_small"/>

           </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>